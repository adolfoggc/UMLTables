<p id="notice"><%= notice %></p>

<h1>My Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_projects.each do |my_project| %>
      <tr>
        <td><%= my_project.name %></td>
        
        <td><%= "Tabelas: #{count_tables my_project.id }" %></td>
        <td><%= "Tuplas: #{count_tuples my_project.id }" %></td>
        <td><%= link_to 'Show', my_project %></td>
        <td><%= link_to 'Destroy', my_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My Project', new_my_project_path %>
